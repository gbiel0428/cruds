import os

os.system("cls")
lista_cliente = []

while True:
    print("=== Opções ===")
    print("1 - CRIAR")
    print("2 - Selecionar / Buscar")
    print("3 - Atualizar / Modificar")
    print("4 - Excluir")
    print("5 - Sair")
    print("\n")

    opcao = input("Informe uma Opção: ")
    print("\n")

    match opcao:
        case "1":
            nome = input("Informe o seu Nome: ")
            lista_cliente.append(nome)
            print(f"O Nome: {nome} foi inserido com sucesso! ")

        case "2":
            print("Lista de clientes:", lista_cliente)

        case "3":
            if not lista_cliente:
                print("Não há nomes para atualizar.")
            else:
                print("Clientes atuais:", lista_cliente)
                nome_para_atualizar = input("Informe o nome que deseja atualizar: ")
                if nome_para_atualizar in lista_cliente:
                    novo_nome = input("Informe o novo nome: ")
                    indice = lista_cliente.index(nome_para_atualizar)
                    lista_cliente[indice] = novo_nome
                    print(f"O nome {nome_para_atualizar} foi atualizado para {novo_nome}")
                else:
                    print(f"O nome {nome_para_atualizar} não foi encontrado.")
                    print("Clientes atuais:", lista_cliente)

        case "4":
            nome_para_excluir = input("Informe um nome para excluir: ")
            if nome_para_excluir in lista_cliente:
                lista_cliente.remove(nome_para_excluir)
                print(f"{nome_para_excluir} foi excluído com sucesso!")
            else:
                print(f"O nome {nome_para_excluir} não foi encontrado.")
                print("Clientes atuais:", lista_cliente)
        case "5":
            print("Saindo")
            break
        case _:
            print("Opção inválida.")
